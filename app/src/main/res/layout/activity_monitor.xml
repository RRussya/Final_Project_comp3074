<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonitoringActivity">

    <TextView
        android:id="@+id/live"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:text="LIVE"
        android:textColor="#08FF00"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/take_over"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:text="Take OVER"
        android:textColor="#FF1B00"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_1"
        android:layout_width="77dp"
        android:layout_height="82dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:text="AI"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_marginStart="288dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:text="Customer"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="191dp"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="99dp"
        android:background="@drawable/rectangle_shape"
        android:text="Hello, welcome to BLANK restaurant, how can I help you today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="191dp"
        android:layout_height="64dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/rectangle_shape"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/textView_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


